@model IEnumerable<Hotel_Booking_System.Domain.Entities.Event>

@{
    ViewData["Title"] = "Upcoming Events";
}

<style>
    .event-section {
        padding: 60px 0;
    }

    .event-image {
        width: 90%;
        height: 300px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .event-text h2 {
        color: #343a40;
        font-weight: 700;
    }

    .event-text p {
        font-size: 1.1rem;
        color: #555;
        line-height: 1.6;
    }

    .btn-contact {
        margin: 40px auto 0;
        display: block;
        padding: 12px 24px;
        background-color: #ffc107;
        color: #000;
        font-weight: 600;
        border-radius: 6px;
        text-align: center;
        text-decoration: none;
        width: fit-content;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

        .btn-contact:hover {
            background-color: #e0a800;
            color: #fff;
        }
</style>

<!-- Page Header -->
<div class="w-100 card border-0 mb-0 mt-4">
    <div class="card-header py-2" style="background:#ffc107; box-shadow: 0 2px 6px rgba(0,0,0,0.15);">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Upcoming Events</h2>
            </div>
        </div>
    </div>
</div>

<!-- Events List -->
@for (int i = 0; i < Model.Count(); i++)
{
    var evt = Model.ElementAt(i); // Use ElementAt for IEnumerable
    var isEven = i % 2 == 0;

    <div class="container event-section">
        <div class="row align-items-center">
            @if (isEven)
            {
                <!-- Image Left, Text Right -->
                <div class="col-md-6">
                    <img src="@evt.ImageUrl" alt="@evt.Title" class="event-image" />
                </div>
                <div class="col-md-6 event-text mt-4 mt-md-0">
                    <h2>@evt.Title</h2>
                    <p>@evt.Description</p>
                </div>
            }
            else
            {
                <!-- Text Left, Image Right -->
                <div class="col-md-6 order-md-2">
                    <img src="@evt.ImageUrl" alt="@evt.Title" class="event-image" />
                </div>
                <div class="col-md-6 order-md-1 event-text mt-4 mt-md-0">
                    <h2>@evt.Title</h2>
                    <p>@evt.Description</p>
                </div>
            }
        </div>
    </div>
}
<!-- Contact Info and Button -->
<div class="container text-center mt-5 mb-4">
    <p style="font-size: 1.1rem; color: #555;">
        Interested in hosting your own event at our hotel? We're here to help!
        For bookings and inquiries, feel free to call us at <strong>(123) 456-7890</strong>
        or email us at <strong><a href="mailto:events@hotelbooking.com">events@hotelbooking.com</a></strong>.
    </p>
    <a class="btn-contact" asp-controller="ContactUs" asp-action="Contact">Contact Us</a>
</div>
