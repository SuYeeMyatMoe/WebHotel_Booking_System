@model Hotel_Booking_System.Domain.Entities.Booking

@{
    ViewData["Title"] = "Book Now";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white text-center py-4 rounded-top-4">
            <h2 class="mb-0">Room Booking</h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="BookNow" method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="John" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Doe" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="john@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CheckInDate" class="form-label fw-bold">Check-In Date</label>
                        <input asp-for="CheckInDate" type="date" class="form-control" />
                        <span asp-validation-for="CheckInDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CheckOutDate" class="form-label fw-bold">Check-Out Date</label>
                        <input asp-for="CheckOutDate" type="date" class="form-control" />
                        <span asp-validation-for="CheckOutDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumberOfGuests" class="form-label fw-bold">Number of Guests</label>
                        <input asp-for="NumberOfGuests" type="number" class="form-control" min="1" placeholder="e.g. 2" />
                        <span asp-validation-for="NumberOfGuests" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="SpecialRequests" class="form-label fw-bold">Special Requests</label>
                        <textarea asp-for="SpecialRequests" class="form-control" rows="3" placeholder="Let us know anything special..."></textarea>
                        <span asp-validation-for="SpecialRequests" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-warning text-white px-4 fw-semibold">Confirm Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
