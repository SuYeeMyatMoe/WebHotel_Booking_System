@model Hotel_Booking_System.Domain.Entities.Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-warning text-white text-center py-3">
            <h2 class="mb-0">Edit Room</h2>
        </div>

        <!--bind properties with entity in asp-for-->
        <div class="card-body">
            <form asp-action="EditRoom" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PriceinDoller" class="form-label fw-semibold"></label>
                        <input asp-for="PriceinDoller" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="PriceinDoller" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomSize" class="form-label fw-semibold"></label>
                        <input asp-for="RoomSize" class="form-control" type="number" />
                        <span asp-validation-for="RoomSize" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Occupancy" class="form-label fw-semibold"></label>
                        <input asp-for="Occupancy" class="form-control" type="number" />
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-semibold">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Room" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-warning text-white fw-semibold">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


