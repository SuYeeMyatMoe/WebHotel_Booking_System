@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero {
        background: url('https://img.freepik.com/premium-photo/type-entertainment-complex_146671-19411.jpg') no-repeat center center;
        background-size: cover;
        height: 100vh;
        color: white;
        position: relative;
    }

    .hero-overlay {
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 30px;
    }

    .hero-content {
        text-align: center;
        max-width: 700px;
    }

    .hero h1 {
        font-size: 3rem;
        color: #ffc107;
        font-weight: bold;
    }

    .hero p {
        font-size: 1.2rem;
    }

    .btn-yellow {
        background-color: #ffc107;
        color: black;
        border: none;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition:0.3s all
    }

        .btn-yellow:hover{
            background-color: #e0a800;
            outline: none;
            color:white;
            text-decoration:none;
        }

    /* Booking Section */
    .booking-section {
        padding: 4rem 1rem;
        background: url('https://q-xx.bstatic.com/xdata/images/hotel/max1024x768/157404363.jpg?k=5f6f06fb9dba1a807a471ffffcd6dfefe00823b8e983cf246e1442b0dc2bbfb1&o=&s=1024x') no-repeat center center;
        background-size: cover;
        color: #fff;
        position: relative;
        text-align: center;
        margin-top:30px;
    }

        .booking-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            z-index: 0;
        }

        .booking-section * {
            position: relative;
            z-index: 1;
        }

        .booking-section h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .booking-section p {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

    /* Gallery Section */
    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        padding: 3rem 2rem;
    }

        .gallery img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            cursor: pointer;
        }

            .gallery img:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            }

    /* Offers Section */
    .offers-section {
        padding: 4rem 2rem;
        background: url('https://t4.ftcdn.net/jpg/08/85/67/85/360_F_885678552_XTwSeyXIU7c8c7LodX9I0k1CmIT736DC.jpg') no-repeat center center;
        background-size: cover;
        color: #fff;
        position: relative;
        text-align: center;
        margin-top: 30px;
    }

        .offers-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            z-index: 0;
        }

        .offers-section * {
            position: relative;
            z-index: 1;
        }

        .offers-section h2 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            color: #ffc107;
        }

    .offers-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .offer-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(6px);
        color: white;
    }

        .offer-card h3 {
            color: #ffc107;
            font-weight: bold;
            margin-bottom: 0.75rem;
        }

        .offer-card p {
            margin-bottom: 1.5rem;
        }

</style>

<!-- Hero Section -->
<div class="hero">
    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Welcome to DreamStay Hotel</h1>
            <p>Enjoy luxury, and unforgettable experiences. Book your perfect room today.</p>
            <a asp-controller="Room" asp-action="Index" class="btn-yellow">Browse Rooms</a>
        </div>
    </div>
</div>

<!-- Booking Section -->
<div class="booking-section">
    <h2>Ready to Book Your Stay?</h2>
    <p>Reserve your luxury experience with us today.</p>
    <a asp-controller="Booking" asp-action="BookNow" class="btn-yellow">Book Now</a>
</div>

<!-- Hotel Design Gallery -->
<div class="gallery">
    <img src="https://q-xx.bstatic.com/xdata/images/hotel/max1024x768/532264876.jpg?k=4df550c10b8aee5f4fd2a388de9498b1e19666cf79f42f2fd22631ca43a06313&o=&s=1024x" alt="Hotel Room" />
    <img src="https://pix8.agoda.net/property/25679694/0/b65099da06529a262a8f87fb244d28d7.jpg?ce=0&s=1024x" alt="Hotel Lobby" />
    <img src="https://q-xx.bstatic.com/xdata/images/hotel/max1024x768/157403875.jpg?k=7ceb8a4df8050f2f14c96f56162ff55c7bf2023419ed942b10ed2331bab0214b&o=&s=1024x" alt="Rooftop Pool" />
    <img src="https://q-xx.bstatic.com/xdata/images/hotel/max1024x768/157404340.jpg?k=1d31f4d7f24253e4733dd60f853427f25219d664851d5bebc5f2e39c720a636a&o=&s=1024x" alt="Hotel Restaurant" />
</div>
<!-- Offers Section -->
<div class="offers-section">
    <h2>Exclusive Offers Just for You</h2>
    <div class="offers-cards">
        <div class="offer-card">
            <h3>Weekend Special</h3>
            <p>Book a weekend stay and get 20% off on all rooms with complimentary breakfast.</p>
            <a asp-controller="Offers" asp-action="WeekendSpecial" class="btn-yellow">View Offer</a>
        </div>
        <div class="offer-card">
            <h3>Couples Retreat</h3>
            <p>Enjoy a romantic getaway with spa access and private dinner experience.</p>
            <a asp-controller="Offers" asp-action="CouplesRetreat" class="btn-yellow">View Offer</a>
        </div>
        <div class="offer-card">
            <h3>Long Stay Deal</h3>
            <p>Stay 4 nights or more and get 1 night free, plus access to all premium amenities.</p>
            <a asp-controller="Offers" asp-action="LongStay" class="btn-yellow">View Offer</a>
        </div>
    </div>
</div>
